{
    "name": "TabsOnCloud",
    "version": "0.1",
    "description": "Sync All Opened Tabs' URL",
    "manifest_version": 2,
    "author": "WoHal",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "page_action": {
        "default_icon": {
            "64": "images/icon64.png",
            "128": "images/icon128.png",
            "256": "images/icon256.png"
        },
        "default_title": "Tabs On Cloud",
        "default_popup": "popup.html"
    },
    "icons": {
        "64": "images/icon64.png",
        "128": "images/icon128.png",
        "256": "images/icon256.png"
    },
    "permissions": [
        "declarativeContent",
        "tabs",
        "storage"
    ]
}